<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="buttonStyle">@style/ButtonStyle</item>
        <item name="android:textViewStyle">@style/TextViewAppearanceNormal</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="buttonStyle">@style/ButtonStyle</item>
        <item name="android:textViewStyle">@style/TextViewAppearanceNormal</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="TextViewAppearanceSmall">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="TextViewAppearanceSecondarySmall">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/secondaryTextColour</item>
    </style>

    <style name="TextViewAppearanceNormal">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="TextViewAppearanceNormalBold">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewAppearanceSecondaryNormal">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/secondaryTextColour</item>
    </style>

    <style name="EditTextAppearanceSecondaryNormal">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/secondaryTextColour</item>
    </style>

    <style name="TextViewAppearanceLarge">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="TextViewAppearanceLargeBold">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewAppearanceSecondaryLarge">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/secondaryTextColour</item>
    </style>

    <style name="TextViewAppearanceExtraLarge">
        <item name="android:textSize">@dimen/font_larger</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="TextViewAppearanceSecondaryExtraLarge">
        <item name="android:textSize">@dimen/font_larger</item>
        <item name="android:textColor">@color/secondaryTextColour</item>
    </style>

    <style name="TextViewAppearanceErrorExtraLarge">
        <item name="android:textSize">@dimen/font_larger</item>
        <item name="android:textColor">@color/errorColour</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:padding">10sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
