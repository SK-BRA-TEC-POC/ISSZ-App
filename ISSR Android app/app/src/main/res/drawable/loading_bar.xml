<rotate
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="90"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="360">

    <shape
        android:innerRadiusRatio="5"
        android:shape="ring"
        android:thicknessRatio="10.0"
        >

        <gradient
            android:centerColor="@color/progressBar"
            android:endColor="@color/progressBar"
            android:startColor="@color/progressBar"
            android:angle="0"
            android:type="sweep"
            android:useLevel="false" />
    </shape>
</rotate>