<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.atos.issr">

    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/launcher_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/launcher_icon"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.RequestsListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ErrorActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.DetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.SearchRequestActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.CitizenActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.LegalPersonActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".modules.barcode.BarcodeScannerActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>